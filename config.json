{
    "name": "FootballFramesClassifier",
    "n_gpu": 1,
    "arch": {
        "type": "FramesClassifier",
        "args": {
            "num_classess": 7
        }
    },
    "data_loader": {
        "type": "FramesDataLoader",
        "args": {
            "images_folder": "data/raw/train",
            "batch_size": 128,
            "csv_path": "data/df_train_framefilter.csv",
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy",
        "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}